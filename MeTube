services:
  metube:
    image: alexta69/metube:latest
    container_name: metube
    ports:
      - '9097:8081'
    volumes:
      - /media/Media-Storage/Downloads:/downloads
      - /media/Media-Storage/Downloads:/audio-downloads # Optional, if you want to separate audio downloads
    environment:
      - UID=1000
      - GID=1000
      - TZ=America/New_York
      - AUDIO_DOWNLOAD_DIR=/audio-downloads # Optional, if you want to separate audio downloads
    restart: unless-stopped
